---
import { Image } from 'astro:assets';

interface Project {
  name_project: string;
  description: string;
  image_preview: string;
  link: string;
  technologies: string[];
}

// Import JSON langsung (Astro mendukung import JSON secara native)
import projectsData from '../data/projects.json';

const projects: Project[] = projectsData;
---

<section class="text-gray-700 body-font py-24" id="projects">
  <div class="container px-5 mx-auto">
    <div class="text-center mb-16">
      <h1 class="text-4xl md:text-5xl font-bold mb-4">
        My <span class="text-blue-600">Projects</span>
      </h1>
      <div class="w-24 h-1 bg-blue-600 mx-auto rounded-full"></div>
    </div>


    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-8">
      {projects.map((project) => (
        <div class="bg-white border border-gray-200 rounded-xl shadow-md overflow-hidden flex flex-col h-full transition-all duration-300 hover:shadow-xl hover:-translate-y-2">
          <!-- Placeholder image jika image_preview kosong -->
          <div class="bg-gray-100 border-2 border-dashed rounded-t-xl w-full h-48 flex items-center justify-center">
            {project.image_preview ? (
              <img src={project.image_preview} alt={project.name_project} class="w-full h-full object-cover" loading="lazy" />
            ) : (
              <span class="text-gray-400 text-sm">No preview</span>
            )}
          </div>

          <div class="p-6 flex flex-col flex-grow">
            <h2 class="text-xl font-semibold text-gray-900 mb-3">
              {project.name_project}
            </h2>

            <p class="text-sm text-gray-600 mb-4 flex-grow line-clamp-3">
              {project.description}
            </p>

            <!-- Tech stack icons -->
            <div class="flex flex-wrap gap-2 mb-5">
              {project.technologies.map((tech) => (
                <img
                  src={tech}
                  alt="tech logo"
                  class="w-8 h-8 object-contain"
                  loading="lazy"
                />
              ))}
            </div>

            <a
              href={project.link}
              target="_blank"
              rel="noopener noreferrer"
              class="mt-auto inline-block text-center px-5 py-2.5 text-sm font-medium text-white bg-blue-600 rounded-lg hover:bg-blue-700 transition">
              View Project â†’
            </a>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>