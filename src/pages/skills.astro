---
import skillsData from "../data/skill.json";

function getImagePath(image: string) {
  if (image.startsWith("http")) return image;
  return image.startsWith("public/") ? image.replace("public/", "/") : image;
}
---

<section id="skills" class="p-10 border-b-4 border-black">
  <h2 class="text-2xl font-semibold mb-6">Skills</h2>

  <div class="grid grid-cols-2 md:grid-cols-4 gap-6">
    {
      skillsData.skill.map((skill) => (
        <div class="flex flex-col items-center p-4 border-2 border-black rounded-lg hover:animate-[wigglecute_0.4s_ease-in-out] transition">
          <div class="mb-4 p-3 bg-blue-50 rounded-full">
            <img
              src={getImagePath(skill.image)}
              alt={skill.name}
              class="w-16 h-16 object-contain"
              loading="lazy"
            />
          </div>
          <h3 class="text-lg font-medium">{skill.name}</h3>
        </div>
      ))
    }
  </div>
</section>
