---
export let title = "About Me";
---

<section
  id="about"
  class="p-10 font-mono text-[15px] leading-relaxed">
  <div class="animate-[popin_0.6s_ease]">
    <!-- const title = "About Me" -->
    <div>
      <span class="syntax-keyword">const</span>
      <span class="syntax-const"> title </span>
      <span class="syntax-keyword">=</span>
      <span class="syntax-string"> "About Me"</span>;
    </div>

    <!-- const name = "Muhammad Haykal" -->
    <div>
      <span class="syntax-keyword">const</span>
      <span class="syntax-const"> name </span>
      <span class="syntax-keyword">=</span>
      <span class="syntax-string"> "Muhammad Haykal"</span>;
    </div>

    <!-- const description -->
    <div class="max-w-3xl">
      <span class="syntax-keyword">const</span>
      <span class="syntax-const"> description </span>
      <span class="syntax-keyword">=</span>
      <span class="syntax-string">
        "I am a Junior Programmer who enjoys building efficient and
        user-friendly applications while continuously learning new
        technologies."
      </span>;
    </div>

    <br />

    <!-- function renderProfile() -->
    <div>
      <span class="syntax-keyword">function</span>
      <span class="syntax-const"> renderProfile</span>()
      <span class="syntax-bracket"> {"{"}</span>
    </div>

    <!-- return <img /> -->
    <div class="pl-6 flex items-center gap-6">
      <div>
        <span class="syntax-keyword">return</span>
        <span class="syntax-bracket"> {"<"}</span>
        <span class="syntax-keyword">img</span>
        <span class="syntax-property"> src</span>
        <span class="syntax-keyword">=</span>
        <span class="syntax-string">"/haykal.png"</span>
        <span class="syntax-bracket"> {" />"}</span>;
      </div>

      <!-- real image rendered -->
      <img
        src="/haykal.png"
        alt="Muhammad Haykal"
        class="w-40 rounded border-4 border-black animate-[floaty_3s_ease-in-out_infinite]"
        loading="lazy"
      />
    </div>

    <!-- closing function -->
    <div>
      <span class="syntax-bracket">{"}"}</span>
    </div>
  </div>
</section>
