    var message = document.getElementById("message").value;
    var whatsapp = "6289509758465";

    var url =
      "https://api.whatsapp.com/send?phone=" +
      whatsapp +
      "&text=Nama saya " +
      firstName +
      " " +
      lastName +
      ". " +
      message;
    window.open(url);
  }
</script>
