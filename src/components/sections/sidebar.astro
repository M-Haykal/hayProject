---
export let title = "Sidebar";
import { files, setActiveFile } from "../../scripts/files";

const activeFile =
  Object.values(files).find((file) => file.active) || files["Home.css"];
---

<!-- Sidebar / Main -->
<aside class="w-12 bg-[#333333] flex flex-col items-center py-4 gap-6">
  <div
    class="text-white border-l-2 border-primary pl-1 w-full flex justify-center cursor-pointer">
    <span class="material-symbols-outlined !text-2xl">file_copy</span>
  </div>
  <div class="text-gray-500 hover:text-white cursor-pointer transition-colors">
    <span class="material-symbols-outlined !text-2xl">search</span>
  </div>
  <div class="text-gray-500 hover:text-white cursor-pointer transition-colors">
    <span class="material-symbols-outlined !text-2xl">account_tree</span>
  </div>
  <div class="text-gray-500 hover:text-white cursor-pointer transition-colors">
    <span class="material-symbols-outlined !text-2xl">play_arrow</span>
  </div>
  <div class="text-gray-500 hover:text-white cursor-pointer transition-colors">
    <span class="material-symbols-outlined !text-2xl">extension</span>
  </div>
  <div class="mt-auto flex flex-col gap-6">
    <div class="text-gray-500 hover:text-white cursor-pointer">
      <span class="material-symbols-outlined !text-2xl">account_circle</span>
    </div>
    <div class="text-gray-500 hover:text-white cursor-pointer">
      <span class="material-symbols-outlined !text-2xl">settings</span>
    </div>
  </div>
</aside>

<!-- Sidebar / Explorer -->
<aside class="w-64 bg-[#181818] border-r border-[#2b2b2b] flex flex-col">
  <div class="px-4 py-3 flex items-center justify-between">
    <h2 class="text-[11px] font-bold uppercase tracking-wider text-gray-400">
      Explorer
    </h2>
    <span class="material-symbols-outlined !text-sm text-gray-400"
      >more_horiz</span
    >
  </div>
  <div class="flex-1 overflow-y-auto">
    <!-- Project Section -->
    <div class="flex flex-col">
      <div
        class="flex items-center gap-1 px-2 py-1 hover:bg-[#2a2d2e] cursor-pointer">
        <span class="material-symbols-outlined !text-sm text-gray-400"
          >expand_more</span
        >
        <span class="text-[11px] font-bold text-gray-300 uppercase"
          >PORTFOLIO</span
        >
      </div>
      <div class="flex flex-col exporer-content">
        <!-- File: Home.css -->
        <div
          class={`flex items-center gap-2 px-6 py-1 cursor-pointer ${files["Home.css"].active ? "bg-[#37373d]" : "hover:bg-[#2a2d2e]"}`}
          onclick="setActiveFile('Home.css')">
          <i class="fa-brands fa-css !text-sm text-blue-500"></i>
          <span
            class={`text-sm ${files["Home.css"].active ? "text-white" : "text-gray-400"}`}
            >Home.css</span
          >
        </div>

        <!-- File: About.js -->
        <div
          class={`flex items-center gap-2 px-6 py-1 cursor-pointer ${files["About.js"].active ? "bg-[#37373d]" : "hover:bg-[#2a2d2e]"}`}
          onclick="setActiveFile('About.js')">
          <i class="fa-brands fa-js !text-sm text-yellow-500"></i>
          <span
            class={`text-sm ${files["About.js"].active ? "text-white" : "text-gray-400"}`}
            >About.js</span
          >
        </div>

        <!-- File: Skills.php -->
        <div
          class={`flex items-center gap-2 px-6 py-1 cursor-pointer ${files["Skills.php"].active ? "bg-[#37373d]" : "hover:bg-[#2a2d2e]"}`}
          onclick="setActiveFile('Skills.php')">
          <i class="fa-brands fa-php !text-sm text-pink-500"></i>
          <span
            class={`text-sm ${files["Skills.php"].active ? "text-white" : "text-gray-400"}`}
            >Skills.php</span
          >
        </div>

        <!-- File: Projects.py -->
        <div
          class={`flex items-center gap-2 px-6 py-1 cursor-pointer ${files["Projects.dart"].active ? "bg-[#37373d]" : "hover:bg-[#2a2d2e]"}`}
          onclick="setActiveFile('Projects.dart')">
          <i class="fa-brands fa-dart-lang !text-sm text-blue-400"></i>
          <span
            class={`text-sm ${files["Projects.dart"].active ? "text-white" : "text-gray-400"}`}
            >Projects.dart</span
          >
        </div>
        <!-- File: Contact.ts -->
        <div
          class={`flex items-center gap-2 px-6 py-1 cursor-pointer ${files["Contact.java"].active ? "bg-[#37373d]" : "hover:bg-[#2a2d2e]"}`}
          onclick="setActiveFile('Contact.java')">
          <i class="fa-brands fa-java !text-sm text-blue-500"></i>
          <span
            class={`text-sm ${files["Contact.java"].active ? "text-white" : "text-gray-400"}`}
            >Contact.java</span
          >
        </div>
      </div>
    </div>
    <!-- Outline Section -->
    <div class="mt-4 border-t border-[#2b2b2b]">
      <div
        class="flex items-center gap-1 px-2 py-1 hover:bg-[#2a2d2e] cursor-pointer">
        <span class="material-symbols-outlined !text-sm text-gray-400"
          >chevron_right</span
        >
        <span class="text-[11px] font-bold text-gray-300 uppercase"
          >OUTLINE</span
        >
      </div>
    </div>
  </div>
</aside>
<!-- End of Sidebar / Explorer -->

