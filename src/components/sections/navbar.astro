---
export let title = "Navbar";
import { getActiveFile } from "../../scripts/files";

const activeFile = getActiveFile();
---

<header
  class="flex items-center justify-between bg-[#2d2d2d] px-4 py-1 select-none">
  <!-- Left -->
  <div class="flex items-center gap-4">
    <!-- Window buttons -->
    <div class="flex gap-2 mr-4">
      <div class="w-3.5 h-3.5 rounded-full bg-[#ff5f56]"></div>
      <div class="w-3.5 h-3.5 rounded-full bg-[#ffbd2e]"></div>
      <div class="w-3.5 h-3.5 rounded-full bg-[#27c93f]"></div>
    </div>

    <!-- Menu -->
    <nav class="flex items-center gap-2 text-xs text-gray-400">
      <span>File</span>
      <span>Edit</span>
      <span>Selection</span>
      <span>View</span>
      <span>Go</span>
      <span>Run</span>
    </nav>
  </div>

  <!-- Title -->
  <div id="navbar-title" class="flex-1 text-center text-xs text-gray-400">
    {activeFile.title} — HayProject — Visual Studio Code
  </div>

  <!-- Right -->
  <div class="flex items-center gap-4">
    <span class="material-symbols-outlined text-gray-400 !text-sm">
      search
    </span>

    <div
      class="flex items-center gap-2 px-2 py-0.5 bg-[#3c3c3c] rounded text-[10px] text-gray-300">
      <span class="material-symbols-outlined !text-xs">
        keyboard_command_key
      </span>
      <span>P</span>
    </div>
  </div>
</header>

