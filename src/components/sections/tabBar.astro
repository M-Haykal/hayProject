---
export let title = "TabBar";
import { files, getActiveFile } from "../../scripts/files";

const activeFile = getActiveFile();
const allFiles = Object.values(files);
---

<!-- Tab Bar -->
<div
  id="tab-container"
  class="tab-bar flex bg-[#252526] h-9 overflow-x-auto border-b border-[#1e1e1e]">
  {
    allFiles.map((file) => (
      <div
        class="tab-item flex items-center px-4 gap-2 border-r border-[#1e1e1e] h-full min-w-[120px] cursor-pointer"
        data-file={file.name}>
        <i class={`fa-brands fa-${file.icon} !text-sm ${file.iconColor}`} />
        <span class="tab-title text-xs">{file.title}</span>
        <span class="tab-close material-symbols-outlined !text-[14px] text-gray-400 hover:bg-[#333] rounded ml-auto">
          close
        </span>
      </div>
    ))
  }
</div>

<!-- Breadcrumb -->
<div
  id="breadcrumb"
  class="breadcrumb-container flex items-center px-4 py-1 text-[11px] text-gray-400 bg-[#1e1e1e]">
</div>
